<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userManager.checkValidUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>           
        </navigation-case>
        <navigation-case>
            <from-action>#{userManager.checkValidUser}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userRegister.createUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>           
        </navigation-case>
        <navigation-case>
            <from-action>#{userRegister.createUser}</from-action>
            <from-outcome>fail</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
     
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logoff</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>           
        </navigation-case>   
        <navigation-case>
            <from-outcome>account</from-outcome>
            <to-view-id>/account.xhtml</to-view-id>           
        </navigation-case>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>           
        </navigation-case>
        <navigation-case>
            <from-outcome>announcements</from-outcome>
            <to-view-id>/announcements.xhtml</to-view-id>           
        </navigation-case>
        <navigation-case>            
            <from-outcome>module</from-outcome>
            <to-view-id>/module.xhtml</to-view-id>           
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/announcements.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logoff</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>           
        </navigation-case>   
        <navigation-case>
            <from-outcome>account</from-outcome>
            <to-view-id>/account.xhtml</to-view-id>           
        </navigation-case>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>           
        </navigation-case>
        <navigation-case>
            <from-outcome>announcements</from-outcome>
            <to-view-id>/announcements.xhtml</to-view-id>           
        </navigation-case>
        <navigation-case>            
            <from-outcome>module</from-outcome>
            <to-view-id>/module.xhtml</to-view-id>           
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/module.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logoff</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>            
        </navigation-case>
        <navigation-case>
            <from-outcome>module</from-outcome>
            <to-view-id>/module.xhtml</to-view-id>            
        </navigation-case>   
        <navigation-case>
            <from-outcome>account</from-outcome>
            <to-view-id>/account.xhtml</to-view-id>           
        </navigation-case>
        <navigation-case>
            <from-outcome>announcements</from-outcome>
            <to-view-id>/announcements.xhtml</to-view-id>           
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/account.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logoff</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>           
        </navigation-case>   
        <navigation-case>
            <from-outcome>announcements</from-outcome>
            <to-view-id>/announcements.xhtml</to-view-id>           
        </navigation-case>
    </navigation-rule>
    <context-param>  
    <param-name>primefaces.THEME</param-name>  
    <param-value>cupertino</param-value>  
</context-param> 
</faces-config>
